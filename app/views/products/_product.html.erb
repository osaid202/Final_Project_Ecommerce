<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Stock:</strong>
    <%= product.stock %>
  </p>

   <p>
    <strong>Category:</strong>
    <%= link_to Category.find(product.category_id).name, Category.find(product.category_id) %>
  </p>

  <p>
    <strong>Orders:</strong>
    <% product.orders.each do |p|%>
      <%= link_to "Order#:#{p.id}", Order.find(p.id) %>
    <% end%>
  </p>
</div>
